{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Population pyramid for Brisbane vs Queensland",
  "title": {
    "text": "Population pyramid for Brisbane vs Queensland",
    "fontSize": 16,
    "font": "Arial",
    "anchor": "middle",
    "color": "black"
  },
  "data": {
    "url": "data/age_and_sex_distribution.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "calculate": "datum['brisbane_male%']",
      "as": "positive_brisbane_male"
    },
    {
      "calculate": "datum['qld_male%']",
      "as": "positive_qld_male"
    }
  ],
  "hconcat": [
    {
      "layer": [
        {
          "mark": {
            "type": "bar",
            "opacity": 0.5,
            "tooltip": true,
            "stroke": "black",
            "strokeWidth": 0.5
          },
          "encoding": {
            "y": {
              "field": "age_group",
              "sort": [
                "85+",
                "80-84",
                "75-79",
                "70-74",
                "65-69",
                "60-64",
                "55-59",
                "50-54",
                "45-49",
                "40-44",
                "35-39",
                "30-34",
                "25-29",
                "20-24",
                "15-19",
                "10-14",
                "5-9",
                "0-4"
              ],
              "axis": null
            },
            "x": {
              "field": "positive_qld_male",
              "type": "quantitative",
              "axis": {
                "title": "Males (%)",
                "orient": "bottom"
              },
              "scale": { "domain": [0, 5], "reverse": true }
            },
            "color": { "value": "#A9A9A9" },
            "tooltip": [
              { "field": "age_group", "type": "nominal", "title": "Age Group" },
              {
                "field": "positive_qld_male",
                "type": "quantitative",
                "title": "Queensland Males (%)",
                "format": ".2f"
              }
            ]
          }
        },
        {
          "mark": { "type": "bar", "opacity": 0.7, "tooltip": true },
          "encoding": {
            "y": { "field": "age_group" },
            "x": {
              "field": "positive_brisbane_male",
              "type": "quantitative",
              "scale": { "domain": [0, 5], "reverse": true }
            },
            "color": { "value": "#4682B4" },
            "tooltip": [
              { "field": "age_group", "type": "nominal", "title": "Age Group" },
              {
                "field": "positive_brisbane_male",
                "type": "quantitative",
                "title": "Brisbane Males (%)",
                "format": ".2f"
              }
            ]
          }
        }
      ],
      "title": "Males",
      "width": 280
    },
    {
      "layer": [
        {
          "mark": {
            "type": "bar",
            "opacity": 0.5,
            "tooltip": true,
            "stroke": "black",
            "strokeWidth": 0.5
          },
          "encoding": {
            "y": {
              "field": "age_group",
              "type": "ordinal",
              "sort": [
                "85+",
                "80-84",
                "75-79",
                "70-74",
                "65-69",
                "60-64",
                "55-59",
                "50-54",
                "45-49",
                "40-44",
                "35-39",
                "30-34",
                "25-29",
                "20-24",
                "15-19",
                "10-14",
                "5-9",
                "0-4"
              ],
              "axis": {
                "title": null,
                "labelAlign": "right",
                "ticks": false,
                "domain": false
              }
            },
            "x": {
              "field": "qld_female%",
              "type": "quantitative",
              "axis": { "title": "Females (%)" },
              "scale": { "domain": [0, 5] }
            },
            "color": { "value": "#A9A9A9" },
            "tooltip": [
              { "field": "age_group", "type": "nominal", "title": "Age Group" },
              {
                "field": "qld_female%",
                "type": "quantitative",
                "title": "Queensland Females (%)",
                "format": ".2f"
              }
            ]
          }
        },
        {
          "mark": { "type": "bar", "opacity": 0.7, "tooltip": true },
          "encoding": {
            "y": { "field": "age_group" },
            "x": {
              "field": "brisbane_female%",
              "type": "quantitative",
              "scale": { "domain": [0, 5] }
            },
            "color": { "value": "#DB7093" },
            "tooltip": [
              { "field": "age_group", "type": "nominal", "title": "Age Group" },
              {
                "field": "brisbane_female%",
                "type": "quantitative",
                "title": "Brisbane Females (%)",
                "format": ".2f"
              }
            ]
          }
        }
      ],
      "title": "Females",
      "width": 280
    }
  ],
  "resolve": { "scale": { "x": "independent", "y": "shared" } }
}
