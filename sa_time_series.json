{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Year-over-Year Population Percentage Change for Adelaide and South Australia",
  "data": {
    "url": "data/time_series_data.csv"
  },
  "transform": [
    {
      "filter": "datum.StateName === 'South Australia' && (datum.LGA_Name === 'Adelaide' || datum.LGA_Name === 'Other LGA')"
    }
  ],
  "mark": {
    "type": "line",
    "point": {
      "filled": true,
      "tooltip": true
    }
  },
  "encoding": {
    "x": { "field": "Year", "type": "temporal", "axis": { "title": "Year" } },
    "y": {
      "field": "Percent_Change",
      "type": "quantitative",
      "axis": { "title": "Percentage Change (%)" }
    },
    "color": {
      "field": "LGA_Name",
      "type": "nominal",
      "scale": {
        "domain": ["Adelaide", "Other LGA"],
        "range": ["#377eb8", "#e41a1c"]
      },
      "legend": { "title": "Region" }
    },
    "tooltip": [
      { "field": "Year", "type": "temporal", "title": "Year" },
      {
        "field": "Percent_Change",
        "type": "quantitative",
        "title": "Percentage Change",
        "format": ".2f"
      },
      { "field": "LGA_Name", "type": "nominal", "title": "Region" }
    ]
  },
  "width": 500,
  "height": 300
}
